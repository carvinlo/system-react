{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "System JUDO",
  "compilerOptions": {
    "target": "esnext",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "esnext", "dom" ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-jsx"
  }
}